{% extends 'base.twig' %}
{% block content %}

    <div class="form-container">
        <h3 class="title">{{ flat.display_name }} No'lu Daireye Kişi Ekle</h3>
        <form action="/admin/residents/create/{{ flat.id }}" method="post">
            <div class="input-row">
                <label for="display_name">Adı Soyadı:</label>
                <input type="text" id="display_name" name="display_name" value="">
            </div>
            <div class="input-row">
                <label for="phone">Telefon Numarası:</label>
                <input type="text" id="phone" name="phone" value="">
            </div>
            <div class="input-row">
                <label for="email">Eposta Adresi:</label>
                <input type="email" id="email" name="email" value="">
            </div>

            <div class="input-row">
                <label></label>
                <button type="submit">Ekle</button>
            </div>
        </form>
    </div>

{% endblock %}